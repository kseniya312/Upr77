		Позиции=сред(Формат(Ном,"ЧП"),1,СтрДлина(Формат(Ном,"ЧП"))-6)+"Четыре "+Довесок2;
	иначе
		позиции=Формат(Ном,"ЧП")+" "+Довесок3;
