			//	текПроверка = 0;  
			//	РеквизитыДлаПроверки.ДобавитьЗначение("Проект");
			//КонецЕсли;
			//ИначеЕсли ТекДокумент.РучнаяНаценка <> ТекДокумент.ДокОснование.РучнаяНаценка Тогда
				//текПроверка = 0;
			//ИначеЕсли ТекДокумент.ФиксСкидка <> ТекДокумент.ДокОснование.ФиксСкидка Тогда
