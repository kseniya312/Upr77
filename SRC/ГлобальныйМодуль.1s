			Иначе
				ВремРегистры.РассчитатьРегистрыНа(ПолучитьПозициюТА()); 
				ТекДата = ПолучитьПозициюТА();
			КонецЕсли;
		КонецЕсли;
		
		ТекКонтр 	= ДокКонтекст.Контрагент;
		//ТекДата 	= ДокКонтекст.ДатаДок;
