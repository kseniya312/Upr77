		НазвВ_МнЧ_ДатПадеже 	= "МОЛам";
		НазвВ_МнЧ_РодитПадеже 	= "МОЛов";   
		
	ИначеЕсли ИмяПерем="МОЛ_Комиссионер" Тогда
