		Позиции=сред(Формат(Ном,"ЧП"),1,СтрДлина(Формат(Ном,"ЧП"))-3)+"Два "+Довесок2;
	иначеесли прав(строка(Ном),1)="3" тогда
		Позиции=сред(Формат(Ном,"ЧП"),1,СтрДлина(Формат(Ном,"ЧП"))-3)+"Три "+Довесок2;
