		НазвВ_МнЧ_ДатПадеже 	= "покупателям";
		НазвВ_МнЧ_РодитПадеже 	= "покупателей";
		
	ИначеЕсли ИмяПерем="СтатусПартии" Тогда
		НазвВ_ЕдЧ_ДатПадеже 	= "статусу партии";
