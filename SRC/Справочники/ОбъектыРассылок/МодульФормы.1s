Процедура ПриЗаписи()
    
	Т = "";
	Если СокрЛП(Наименование) = "" Тогда
		Т = Т + "Не указан электронный адрес";
	КонецЕсли;
	Если ГруппаРассылки.Выбран() = 0 Тогда
		Т = Т + "
		|Не указана группа рассылки";
	КонецЕсли; 
	Если СокрЛП(Т) <> "" Тогда
		Предупреждение(Т);
		СтатусВозврата(0);
	КонецЕсли;
	
