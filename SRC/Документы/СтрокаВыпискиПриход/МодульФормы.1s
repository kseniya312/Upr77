	Если СтарыйДоговор <> Договор Тогда
		СтарыйДоговор	= Договор;
	    
		Если ПустоеЗначение(Контрагент) = 1 Тогда
		    Контрагент			= Договор.Владелец;
		    СтарыйКонтрагент	= Контрагент;
		КонецЕсли;
		
		РасчетТекущегоДолга();
		ПересчетСуммыВзаиморасчетов();
		УправлениеДоступностью();
	КонецЕсли;
	
