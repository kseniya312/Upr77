//******************************************************************************
// РасчетТекущегоДолга()
//
// Параметры:
//	Нет
//
// Возвращаемое значение:
//	Нет
//
// Описание: 
//	Производит вызов глобальной функции расчета суммы текущего долга контрагента.
//  В зависимости от характера задолженности устанавливает 
//  цвет элемента диалога "Сумма долга". (Если долг >= 0 - синий, иначе - красный)   
//
Процедура РасчетТекущегоДолга()
	                 
	Если      (КодОперации = глКО.ОплатаОтПокупателя) Тогда
		 // приход оплаты от покупателя 
		ТекущийДолг = глТекущийДолг(Фирма, Договор, "Покупатель");
		
	ИначеЕсли (КодОперации = глКО.ВозвратОплатыОтПоставщика) Тогда
		// приход - возврат от поставщика 
		ТекущийДолг = глТекущийДолг(Фирма, Договор, "Поставщик");
	
	Иначе
		ТекущийДолг = 0;
	КонецЕсли;
	                     
	Форма.ТекстТекущийДолг.Заголовок(глФРМ(ТекущийДолг,Договор.ВалютаВзаиморасчетов));
	
	Если ТекущийДолг < 0 Тогда
		Форма.ТекстТекущийДолг.Цвет(255); 
	Иначе
		Форма.ТекстТекущийДолг.Цвет(0,0,128); 
	КонецЕсли;

КонецПроцедуры //РасчетТекущегоДолга()

//******************************************************************************
// ЗаполнениеПоДокументуОснованию()
//
// Параметры:
//  Нет
//
// Возвращаемое значение:
//  Нет
//
// Вызывается из формул элементов диалога:
//
// Описание:
//  Производит заполнение документа по документу  - основанию.
//
Функция ЗаполнениеПоДокументуОснованию()
	
	Если ДокОснование.Выбран()=0 Тогда
		Возврат "Не выбран документ - основание";
	КонецЕсли;
	
	ВидОсн = ДокОснование.Вид();
	
	Если (ВидОсн <> "ЗаявкаПокупателя") и 
		 (ВидОсн <> "ВозвратПоставщику") и
		 (ВидОсн <> "ОтчетКомиссионера") и
		 (ВидОсн <> "Реализация") и
		 (ВидОсн <> "РеализацияРозница") и
		 (ВидОсн <> "РеализацияПрочее") и
		 (ВидОсн <> "СтрокаВыпискиРасход") И 
		 (ВидОсн <> "РабочийДень") И  
		 (ВидОсн <> "СчетБнРозница")  
		 Тогда
		Возврат "Неверный вид документа - основания!";
	КонецЕсли;

	//Тут оплата розничного безнала
	Если ВидОсн="СчетБнРозница" Тогда
		КодОперации = Перечисление.КодыОпераций.ОплатаОтПокупателя;
		Контрагент	= ДокОснование.КонтрагентЮЛ;
		Договор		= ДокОснование.ДоговорЮЛ;
		Валюта		= глРубли;
		ДатаДок		= ТекущаяДата();
		Курс		= глКурсДляВалюты(Валюта,ДатаДок);
		Сумма 		= глПересчет(ДокОснование.итог("Сумма"), Договор.ВалютаВзаиморасчетов, ДатаДок, Валюта, Курс);  
		
		СтараяВалюта= Валюта; 
		СтарыйКурс  = Курс;
		ПересчетСуммыВзаиморасчетов();
		Комментарий	= "Ввод оплаты от покупателя по розничному счету: №"+сокрЛП(ДокОснование.НомерДок);
		
		Возврат "";
	КонецЕсли;

	//Тут приход денег от магазинов - через банк / терминальные продажи
	Если ВидОсн="РабочийДень" Тогда
		если глКонтроль = "Инкассация" Тогда
			КодОперации = Перечисление.КодыОпераций.РозничнаяВыручка;
			Контрагент	= ДокОснование.Контрагент;
			Договор		= ДокОснование.Договор;
			Проект		= Константа.ПроектДляЗагрузки;
			БанковскийСчет	= ДокОснование.Склад.ОсновнойБанковскийСчет;
			Валюта		= глРубли;
			ДатаДок		= ДокОснование.ДатаДок+1;
			Курс		= глКурсДляВалюты(Валюта,ДатаДок);
			Сумма 		= глПересчет(ДокОснование.Инкасация, Договор.ВалютаВзаиморасчетов, ДатаДок, Валюта, Курс);  
			ПересчетСуммыВзаиморасчетов();
			СтараяВалюта= Валюта; 
			СтарыйКурс  = Курс;
			Комментарий	= "Ввод инкассации от магазина: "+сокрЛП(ДокОснование.Склад);
			ПриИзмененииБанковскогоСчета();
			Возврат "";
		ИначеЕсли глКонтроль = "ТерминальныеПродажи" Тогда
			КодОперации = Перечисление.КодыОпераций.РозничнаяВыручка;
			Контрагент	= ДокОснование.Контрагент;
			Договор		= ДокОснование.Договор;
			Проект		= Константа.ПроектДляЗагрузки;
			БанковскийСчет	= Константа.БанковскийСчетДляТерминала;
			Валюта		= глРубли;
			ДатаДок		= ДокОснование.ДатаДок+1;
			Курс		= глКурсДляВалюты(Валюта,ДатаДок);
			Сумма 		= глПересчет(ДокОснование.ПроданоКК - ДокОснование.ВозвращеноКК, Договор.ВалютаВзаиморасчетов, ДатаДок, Валюта, Курс);  
			ПересчетСуммыВзаиморасчетов();
			СтараяВалюта= Валюта; 
			СтарыйКурс  = Курс;
			Комментарий	= "Ввод прихода по терминальным картам от магазина: "+сокрЛП(ДокОснование.Склад);
			ПриИзмененииБанковскогоСчета();
			Возврат "";
		Иначе
			Сообщить("Вводить строку выписки (приход) автоматически на основании документа рабочий день можно лишь из тела документа!","!");
			Возврат "";
		КонецЕсли;
	КонецЕсли;
	
	//Тут всё остальное
	СуммаВзаиморасчетов	= ДокОснование.СуммаВзаиморасчетов;
	
	Если (ВидОсн = "ВозвратПоставщику") или
	     (ВидОсн = "СтрокаВыпискиРасход")Тогда
		КодОперации = Перечисление.КодыОпераций.ВозвратОплатыОтПоставщика;
		Если (ВидОсн = "ВозвратПоставщику") Тогда
			Сумма        = ДокОснование.Итог("Сумма") + ?(ДокОснование.СуммаВклНДС = 1, 0, ДокОснование.Итог("СуммаНДС"));
			ОблагаетсяНП = ДокОснование.УчитыватьНП;
			Сумма        = Сумма + ?(ДокОснование.СуммаВклНП  = 1, 0, ДокОснование.Итог("СуммаНП"));
		Иначе  // СтрокаВыпискиРасход
			Сумма        = ДокОснование.Сумма;
			ОблагаетсяНП = ДокОснование.ОблагаетсяНП;
		КонецЕсли;
	Иначе
		КодОперации = Перечисление.КодыОпераций.ОплатаОтПокупателя;
		// Оплачиваем по умолчанию сумму, которую считаем нужным оплатить по взаиморасчетам
		Если СуммаВзаиморасчетов = 0 Тогда
		    Сумма = 0;
		Иначе
			Сумма = глПересчет(СуммаВзаиморасчетов, Договор.ВалютаВзаиморасчетов, ДатаДок, Валюта, Курс);  
		КонецЕсли; 
	КонецЕсли;
		
	СтараяВалюта = Валюта; 
	СтарыйКурс   = Курс;

	Возврат "";

КонецФункции // ЗаполнениеПоДокументуОснованию()
  
Процедура ПолучитьСписокРеализаций(ТекОснование, СписокРеализаций)
	Если (ТекОснование.Вид() = "СчетБнРозница")
		или (ТекОснование.Вид() = "ЗаявкаКлиентаРозница")
		или (ТекОснование.Вид() = "ЗаявкаПокупателя") 
		или (ТекОснование.Вид() = "РасходнаяНакладнаяРозницаБезнал") Тогда  
		ДокПодч = СоздатьОбъект("Документ");
		ДокПодч.ВыбратьПодчиненныеДокументы(,,ТекОснование);
		Пока ДокПодч.ПолучитьДокумент() = 1 Цикл
			Если (ДокПодч.Вид() = "Реализация") и (ДокПодч.Проведен() = 1) Тогда     
				Если СписокРеализаций.НайтиЗначение(ДокПодч.ТекущийДокумент())  = 0 Тогда
					СписокРеализаций.ДобавитьЗначение(ДокПодч.ТекущийДокумент(), ""+ДокПодч.НомерДок+" от "+ДокПодч.ДатаДок+" сумма "+глФРМ(ДокПодч.Итог("Сумма")+?(ДокПодч.СуммаВклНП=1,0,ДокПодч.Итог("СуммаНП"))+?(ДокПодч.СуммаВклНДС=1,0,ДокПодч.Итог("СуммаНДС"))));
				КонецЕсли;	
			КонецЕсли;
			Если (ДокПодч.Вид() = "СчетБнРозница") или (ДокПодч.Вид() = "ЗаявкаКлиентаРозница") или (ДокПодч.Вид() = "ЗаявкаПокупателя") или (ДокПодч.Вид() = "РасходнаяНакладнаяРозницаБезнал") Тогда   
				ПолучитьСписокРеализаций(ДокПодч.ТекущийДокумент(), СписокРеализаций);	
			КонецЕсли;	
		КонецЦикла;	
	КонецЕсли;		
КонецПроцедуры	
           
Процедура ПоКнРеализация()
	Если ПустоеЗначение(ДокОснование) = 0 Тогда
		СписокРеализаций = СоздатьОбъект("СписокЗначений");
		ПолучитьСписокРеализаций(ДокОснование,СписокРеализаций); 
		
		Если Не (СписокРеализаций.РазмерСписка() = 0) Тогда
			ОснРеализация = "";
			Если СписокРеализаций.ВыбратьЗначение(ОснРеализация,"Есть реализации под данному основанию. Выберите нужную.",,0) = 1 Тогда
				ДокОснование = ОснРеализация;	
				
				// Выбрали основание
				глЗаполнитьШапкуНаОсн(Контекст,ДокОснование);
				Если ПустоеЗначение(БанковскийСчет) = 0 Тогда
					Валюта = БанковскийСчет.ВалютаСчета;
				КонецЕсли;
			КонецЕсли;	
		КонецЕсли;	
	КонецЕсли;	
КонецПроцедуры	

//*****************************************************************************
// ПоКнопкеОснование()
// 
// Параметры: 
//  Нет
//
// Возвращаемое значение: 
//  Нет
//
// Описание:
// 	Вызывается по кнопке выбора документа основания                  
//
Процедура ПоКнопкеОснование()
	Перем Основание;
	
	// если документ основание уже есть, откроем его
	Если ПустоеЗначение(ДокОснование) = 0 Тогда
		ОткрытьФорму(ДокОснование);
		Возврат;
	КонецЕсли;
	
	// если документа - основания нет, позволяем выбрать его
	Основание = глВыбратьОснование(Контекст);
	Если ПустоеЗначение(Основание) = 0 Тогда       
		СписокРеализаций = СоздатьОбъект("СписокЗначений");
		ПолучитьСписокРеализаций(Основание,СписокРеализаций); 
		
		Если Не (СписокРеализаций.РазмерСписка() = 0) Тогда
			ОснРеализация = "";
			Если СписокРеализаций.ВыбратьЗначение(ОснРеализация,"Есть реализации под данному основанию. Выберите нужную.",,0) = 1 Тогда
				Основание = ОснРеализация;	
			КонецЕсли;	
		КонецЕсли;	
		
		// Выбрали основание
		глЗаполнитьШапкуНаОсн(Контекст,Основание);
		Если ПустоеЗначение(БанковскийСчет) = 0 Тогда
			Валюта = БанковскийСчет.ВалютаСчета;
		КонецЕсли;
		
		ТекстВопроса = "Заполнить сумму по документу основанию?";
		Если Сумма <> 0 Тогда
			ТекстВопроса = ТекстВопроса + РазделительСтрок +"(перед заполнением сумма будет обнулена)";
		КонецЕсли;
			
		Если Вопрос(ТекстВопроса, "Да+Нет", 60) <> "Да" Тогда
			Возврат;
		КонецЕсли;
			
		Сумма = 0;
		Результат = ЗаполнениеПоДокументуОснованию();
		Если ПустоеЗначение(Результат) = 0 Тогда
			Предупреждение(Результат, 60);
		КонецЕсли;
		
		СтарыйКонтрагент	= Контрагент;
		СтарыйДоговор		= Договор;
			
		РасчетТекущегоДолга();           
	КонецЕсли;
	
КонецПроцедуры //ПоКнопкеОснование()

//******************************************************************************
// ПоКнопкеДолгКлиента()
//
// Параметры:
//  
//
