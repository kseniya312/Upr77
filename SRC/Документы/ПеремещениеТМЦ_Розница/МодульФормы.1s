Процедура ВводНового(Скопирован)
	                  
	глЗаполнитьШапку(Контекст, Скопирован);
    СкладПолучатель=Константа.СкладРозничногоТранзита;
	
	ЭтоРозница=Перечисление.ВидДокументаРозница.ПеремещениеРозница+сокрЛП(Склад);	//Принадлежность документа к розничному учёту
	ЭтоРозница1=Перечисление.ВидДокументаРозница.ПеремещениеРозница+сокрЛП(СкладПолучатель);	//Принадлежность документа к розничному учёту
    
	
	Если Скопирован = 1 Тогда	//копирование документа 
		Возврат;
		Принят_к_учету		= ПолучитьПустоеЗначение(Принят_к_учету);
		Набран				= 0;
		НеобхКорректировка	= 0;

	КонецЕсли;                              
	
	ФирмаПолучатель = Фирма;
//	СкладПолучатель = Склад;
	Если НазваниеНабораПрав()="Продавец_розница" тогда
		форма.СкладПолучатель.Доступность(0);
		форма.ФирмаПолучатель.Доступность(0);
		форма.Фирма.Доступность(0);
	КонецЕсли; 
