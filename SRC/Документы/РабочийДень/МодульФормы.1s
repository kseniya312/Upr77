			КонецЕсли;
			ОткрытьФорму("Документ.СтрокаВыпискиРасход",,ТекущийДокумент());
		Иначе
			ОткрытьФорму(ВыпискаБанка);
		КонецЕсли;
	Иначе
		Сообщить("Движений по терминальным продажам нет!");
	КонецЕсли;
	глКонтроль = "";
